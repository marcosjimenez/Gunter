<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gunter.UI.MAUI.Pages.MainPage">

    <ScrollView>
        <StackLayout Margin="16">

            
            
            
        </StackLayout>
    </ScrollView>

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Solution">
            <MenuFlyoutItem Text="New Solution"/>
            <MenuFlyoutItem Text="Open Solution"/>
            <MenuFlyoutItem Text="Exit"
                            Command="{Binding ExitCommand}" />
        </MenuBarItem>

        <MenuBarItem Text="Project">
            <MenuFlyoutItem Text="Add Project"/>
            <MenuFlyoutItem Text="Properties"/>
        </MenuBarItem>
        
    </ContentPage.MenuBarItems>


</ContentPage>
